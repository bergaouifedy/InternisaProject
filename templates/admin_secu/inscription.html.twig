{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<!-- Titlebar
	================================================== -->
	<div id="titlebar" class="gradient">
		<div class="container">
			<div class="row">
				<div class="col-md-12">

					<h2>Register</h2>

					<!-- Breadcrumbs -->
					<nav id="breadcrumbs" class="dark">
						<ul>
							<li>
								<a href="{{path('home')}}">Home</a>
							</li>
							<li>Register</li>
						</ul>
					</nav>

				</div>
			</div>
		</div>
	</div>


	<!-- Page Content
	================================================== -->
	<div class="container">
		<div class="row">
			<div class="col-xl-5 offset-xl-3">

				<div
					class="login-register-page">
					<!-- Welcome Text -->
					<div class="welcome-text">
						<h3 style="font-size: 26px;">Let's create your account!</h3>
						<span>Already have an account?
							<a href="pages-login.html">Log In!</a>
						</span>
					</div>

					<!-- Account Type -->
					<div class="account-type">
						<div>
							<input type="radio" name="account-type-radio" id="freelancer-radio" class="account-type-radio" checked/>
							<label for="freelancer-radio" class="ripple-effect-dark">
								<i class="icon-material-outline-account-circle"></i>
								Freelancer</label>
						</div>

						<div>
							<input type="radio" name="account-type-radio" id="employer-radio" class="account-type-radio"/>
							<label for="employer-radio" class="ripple-effect-dark">
								<i class="icon-material-outline-business-center"></i>
								Employer</label>
						</div>
					</div>

					<!-- Form -->
					<form  id="register-account-form">
						{{form_start(form)}}
						<div class="input-with-icon-left">
							<i class="icon-material-outline-account-circle"></i>
							{{form_row(form.username,{
                            "attr": {
                                "class" : "input-text with-border",
                                "type" : "text",
                                "name" : "username-register",
                                "id" : "emailaddress-register",
                                "placeholder": "Username"
                            },
                    })}}
						</div>
						<div class="input-with-icon-left">
							<i class="icon-material-baseline-mail-outline"></i>
							{{form_row(form.email,{
                            "attr": {
                                "placeholder": "Email",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>

						<div class="input-with-icon-left" data-tippy-placement="bottom" data-tippy="" data-original-title="Should be at least 8 characters long">
							<i class="icon-material-outline-lock"></i>
							{{form_row(form.password,{
                            "attr": {
                                "placeholder": "Password",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>


						<div class="input-with-icon-left">
							<i class="icon-material-outline-assignment"></i>
							{{form_row(form.firstname,{
                            "attr": {
                                "placeholder": "firstname",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>
						<div class="input-with-icon-left">
							<i class="icon-material-outline-assignment"></i>
							{{form_row(form.lastname,{
                            "attr": {
                                "placeholder": "Lastname",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>
						<div class="input-with-icon-left">
							<i class="icon-feather-phone-call"></i>
							{{form_row(form.numTel,{
                            "attr": {
                                "placeholder": "numTel",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>
						<div class="input-with-icon-left">
							<i class="icon-material-outline-add-location"></i>
							{{form_row(form.adresse,{
                            "attr": {
                                "placeholder": "Adresse",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>
						<div class="input-with-icon-left">
							<i class="icon-material-outline-add-location"></i>
							{{form_row(form.pays,{
                            "attr": {
                                "placeholder": "Pays",
                                "class" : "input-text with-border"
                            },
                    })}}
						</div>

					
					<!-- Button -->
					<input class="icon-material-outline-arrow-right-alt button full-width button-sliding-icon ripple-effect margin-top-10" value="register" type="submit">
                    {{form_end(form)}}
                </form>
					<!-- Social Login -->
					<div class="social-login-separator">
						<span>or</span>
					</div>
					<div class="social-login-buttons">
						<button class="facebook-login ripple-effect">
							<i class="icon-brand-facebook-f"></i>
							Register via Facebook</button>
						<button class="google-login ripple-effect">
							<i class="icon-brand-google-plus-g"></i>
							Register via Google+</button>
					</div>
				</div>

			</div>
		</div>
	</div>
	<!-- Spacer -->
	<div class="margin-top-70"></div>
	<!-- Spacer / End-->

{% endblock %}
